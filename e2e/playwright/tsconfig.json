{
	"compilerOptions": {
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"target": "es2022",
		"lib": ["es2022", "dom"],
		"types": ["node"],
		"skipLibCheck": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["./**/*.ts", "./**/*.js"]
}
